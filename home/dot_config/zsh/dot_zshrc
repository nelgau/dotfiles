##
# Zsh
#

HISTFILE=$XDG_STATE_HOME/zsh/history

setopt PROMPT_CR
setopt PROMPT_SP
export PROMPT_EOL_MARK=""

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/.config/zsh/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

##
# Python
#

# Build python with shared object support
export PYTHON_CONFIGURE_OPTS="--enable-shared"

##
# Path
#

export PATH="$XDG_DATA_HOME/npm/bin:${PATH}"
export PATH="$XDG_BIN_HOME:${PATH}"

# Avoid collisions between Homebrew and asdf-installed versions
alias brew='env PATH="${PATH//.asdf/shims:/}" brew'

##
# Oh My Zsh
#

ZSH="$XDG_DATA_HOME/oh-my-zsh"

ZSH_THEME="powerlevel10k/powerlevel10k"
# ZSH_THEME="robbyrussell"

plugins=(
  vi-mode
  zsh-syntax-highlighting
  asdf
  tmux
  tmuxinator
)

# tmux plugin
ZSH_TMUX_CONFIG="$XDG_CONFIG_HOME/tmux/tmux.conf"
ZSH_TMUX_UNICODE="true"
if [ ! -n "$SSH_CONNECTION" ]; then
    ZSH_TMUX_AUTOSTART="true"
fi

# Auto updates will cause Oh My Zsh to drift out of sync with chezmoi's state.
DISABLE_AUTO_UPDATE="true"

source $ZSH/oh-my-zsh.sh

# To customize prompt, run `p10k configure` or edit $ZDOTDIR/.p10k.zsh.
[[ ! -f $ZDOTDIR/.p10k.zsh ]] || source $ZDOTDIR/.p10k.zsh

##
# Config
#

export EDITOR='nvim'
export LESSOPEN="|$HOMEBREW_PREFIX/bin/lesspipe.sh %s"

##
# Build
#

# export CFLAGS="-I$HOMEBREW_PREFIX/include"
# export CPPFLAGS="-I$HOMEBREW_PREFIX/include"
# export LDFLAGS="-L$HOMEBREW_PREFIX/lib"

export MAKEFLAGS="-j $(sysctl -n hw.ncpu)"
export CMAKE_GENERATOR=Ninja

##
# Color
#

export LSCOLORS=Exfxbxdxcxegedabagacad

alias ls='ls -alhG --color=auto'
alias grep='grep --color=auto'
alias fgrep='fgrep --color=auto'
alias egrep='egrep --color=auto'

##
# Aliases
#

alias cm='tmux-chezmoi'

alias cdcg='cd ~/code/github.com'
alias cdcn='cd ~/code/github.com/nelgau'

alias sk='ssh kelvin'
alias sm='ssh maxwell'

##
# Git One-Word Aliases
#

alias g='git'
alias ga.='git add .'

# TODO: The target of each alias should be the full command, not the short
# code defined in git/config. This would make the output of the shell's `alias`
# command much more useful.
git config --get-regexp ^alias\. \
    | sed -e s/^alias\.// \
    | while read -r a cmd ; do
    alias "g$a"="git $cmd"
done
