[advice]
	addEmptyPathspec = false
[alias]
	a = add
	ap = add -p
	b = branch
	bd = branch -D
	c = commit
	ca = commit --amend
	cf = commit --fixup
	co = checkout
	cob = checkout -b
	d = diff
	dc = diff --cached
	dh = diff HEAD
	fo = fetch origin
	l = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
	ol = log --pretty=oneline
	p = push
	prb = pull --rebase
	ra = rebase --abort
	rc = rebase --continue
	ri = rebase --interactive
	s = status -sb
	su = submodule update
[init]
	defaultBranch = main
[push]
	default = current
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
